<?xml version="1.0" ?>
<openerp>
	<data>
        <record model="ir.ui.view" id="extraschool_parent_refund_wizard_form">
            <field name="name">extraschool.parent.refund.wizard.form</field>
            <field name="model">extraschool.parent_refund_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Remboursement">
                    <group col="3">
                        <h2>
                            <field name="parent_id" readonly="1" nolabel="1"  options="{'no_create':True}"/>
                        </h2>
                        <field name="amount"/>
                    </group>
                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids" readonly="1">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="paymentdate" readonly="True"></field>
                                    <field name="structcom" readonly="True" />
                                    <field name="amount" readonly="True"/>
                                    <field name="solde" sum="True" readonly="True"/>
                                </tree>
                             </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="generate_refund_parent" string="Rembourser" class="btn btn-primary" type="object"/>
                        <button special="cancel" class="btn" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_lbsc_parent_refund_wizard">
            <field name="name">Parent Refund Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">extraschool.parent_refund_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

	</data>
</openerp>
