	                        <!--<field name="structcom"/>-->
	                        <!--<field name="payment_date"/>-->
	                        <!--<field name="amount" sum="True" />-->
	                        <!--<field name="solde" sum="True" />-->
	                	<!--</tree>-->
                     <!--</field>-->
                    <!--<separator string="" colspan="4"/>-->
                    <footer>
                        <button name="xxxxxxxxxxxxx" string="Rembourser" class="btn btn-primary" type="object"/>
                        <button special="cancel" class="btn" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_lbsc_parent_refund_wizard">
            <field name="name">Parent Refund Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">extraschool.parent_refund_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

	</data>
</openerp>
