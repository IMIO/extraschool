                		<!--<field name="reconciliation_amount_balance" readonly="True" />-->
                  		<!--<separator string="Reconciliation" colspan="4"/>-->
                  	<!--</group>-->
                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids" readonly="1">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="paymentdate"></field>
                                    <field name="structcom" readonly="True" />
                                    <field name="amount" />
                                    <field name="solde" sum="True" />
                                </tree>
                             </field>
                        </page>
                    </notebook>
                    <!--<field name="payment_status_ids">-->
