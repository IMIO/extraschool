<?xml version="1.0" ?>
<openerp>
	<data>        
        <record model="ir.ui.view" id="extraschool_copiercode_form">
            <field name="name">extraschool.copiercode.form</field>
            <field name="model">extraschool.copiercode</field>    
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Copier code">
            <group col="4">
                    <field name="name"/>     
                    <newline/>       
                    <field name="pin"/>
                    <newline/>
                    <field name="copierquotas">
                    <tree string="Copier quotas" version="7.0">
                        <field name="schoolimplantationid"/>
                        <field name="nbperiods"/> 
                        <field name="nbchilds"/>    
                        <field name="totalquota"/>
                        <field name="nbcopiesdone"/>
                        <field name="remainingcopies"/>
                    </tree>
                    </field>            
                    <field name="totalremainingcopies"/>
            </group>
            </form>
            </field> 
        </record>
        <record model="ir.actions.act_window" id="action_extraschool_copiercode">
			<field name="name">Copier code</field>
			<field name="res_model">extraschool.copiercode</field>
			<field name="view_type">form</field> 
		</record>
	</data>
</openerp>
