<?xml version="1.0" ?>
<odoo>
	<data>
        <record model="ir.ui.view" id="extraschool_place_tree">
			<field name="name">extraschool.place.tree</field>
			<field name="model">extraschool.place</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Place" delete="false">
                    <field name="name"/>
                    <field name="street"/>
                    <field name="zipcode"/>
                    <field name="city"/>
                    <field name="street_code"/>
                    <field name="tel"/>
                    <field name="fax"/>
                    <field name="email"/>
                </tree>
			</field>
		</record>

        <record model="ir.ui.view" id="extraschool_place_form">
            <field name="name">extraschool.place.form</field>
            <field name="model">extraschool.place</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Place" delete="false">
                <sheet>
                    <group>
                        <field name="active"/>
                    </group>
                    <group col="2">
                        <field name="name"/>
                        <newline/>
                        <field name="street"/>
                        <newline/>
                        <field name="zipcode"/>
                        <newline/>
                        <field name="city"/>
                        <newline/>
                        <field name="street_code"/>
                        <newline/>
                        <field name="tel"/>
                        <newline/>
                        <field name="fax"/>
                        <newline/>
                        <field name="email"/>
                        <newline/>
                        <field name="schedule"/>
                        <newline/>
                        <field name="schoolimplantation_ids"/>
                    </group>
                </sheet>
                <div class="oe_chatter" groups="extraschool.extraschool_gods">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
            </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_extraschool_place">
			<field name="name">Place</field>
			<field name="res_model">extraschool.place</field>
			<field name="view_type">form</field>
		</record>
	</data>
</odoo>
