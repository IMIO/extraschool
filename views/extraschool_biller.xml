<?xml version="1.0" ?>
<openerp>
	<data> 
		<record model="ir.ui.view" id="extraschool_biller_tree">
			<field name="name">Biller.tree</field>
			<field name="model">extraschool.biller</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Biller">
					<field name="period_from"/>
					<field name="period_to"/>
                    <field name="payment_term"/>
                    <field name="total"/>
                    <field name="received"/>
                    <field name="novalue"/>
                    <field name="balance"/>                    	
                </tree>
			</field>
		</record>
        
		<record model="ir.ui.view" id="extraschool_biller_form">
			<field name="name">Biller.form</field>
			<field name="model">extraschool.biller</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Biller">
				<div class="oe_right oe_button_box" name="buttons"> 
					<button name="mail_invoices" 
						string="Factures courrier" 
						type="object" 						
						class="oe_inline oe_stat_button" 
						icon="fa-print"
							/>													
					<button name="email_invoices" 
						string="Email factures" 
						type="object" 						
						class="oe_inline oe_stat_button" 
						icon="fa-envelope-o"
							/>			
					<button name="all_invoices" 
						string="Toutes les factures" 
						type="object" 						
						class="oe_inline oe_stat_button" 
						icon="fa-files-o"
							/>														
				</div>
						
				<group col="4">
                    <field name="period_from"/>
					<field name="period_to"/>
                    <newline/>
                    <field name="payment_term"/>                    
                    <newline/>
                    <field name="total"/>
                    <newline/>
                    <field name="received"/>
                    <newline/>
                    <field name="novalue"/>
                    <newline/>
                    <field name="balance"/>
                    <newline/>
                    <field name="biller_file" filename="filename"/>
                    <newline/>
                    <field name="nbinvoices"/>                    
                    <newline/>
                    <field name="other_ref"/>
                    <newline/>
                    <field name="comment" widget="html"/>                    
                    	                   
                    </group>
                    <separator string="Invoices" />
					<field name="invoice_ids">
						<tree>
							<field name="parentid" />
	                        <field name="activitycategoryid"/>
							<field name="structcom"/>	                        
	                        <field name="period_from"/>
	                        <field name="period_to"/>
	                        <field name="payment_term"/>
	                        <field name="amount_total" sum="True"/>
	                        <field name="amount_received" sum="True"/>
	                        <field name="balance"  sum="True"/>
	                        <field name="no_value"/>	                        								
						</tree>
					</field>                    
				</form>
			</field>
		</record>
        
        <record model="ir.actions.act_window" id="action_extraschool_biller">
			<field name="name">Biller</field>
			<field name="res_model">extraschool.biller</field>
			<field name="view_type">form</field>
		</record>
        
	</data>
</openerp>
