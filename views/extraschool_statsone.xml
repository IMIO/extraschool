<?xml version="1.0" ?>
<openerp>
	<data> 

        <record model="ir.ui.view" id="extraschool_statsone_wizard_form">
            <field name="name">extraschool.statsone.wizard.form</field>
            <field name="model">extraschool.statsone_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Stats ONE Wizard">
                    <field name="state" invisible="1" />
                    <group states="init">
                        <field name="placeid" />
                        <newline />
                        <field name="activitycategory" />
                        <newline />
                        <field name="year" />
                        <newline />
                        <field name="quarter" />
                        <newline />
                        <field name="transmissiondate" />
                    </group>
                    <group states="compute_statsone">
                        <field name="name" invisible="1" colspan="4"/>
                        <field name="statsone" nolabel="1" readonly="1" filename="name" colspan="4"/>
                        <label string="Ok" />
                    </group>
                    <separator string="" colspan="4"/>
                    <group colspan="4" col="3">
                        <button name="action_compute_statsone" string="Compute statsone" icon="gtk-apply" type="object"
                            states="init" />
                    </group>
                    <label string="" colspan="4" />
                    <label string="" colspan="4" />
                    <label string="" colspan="4" />
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_lbsc_statsone_wizard">
            <field name="name">Stats ONE Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">extraschool.statsone_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
	</data>
</openerp>
