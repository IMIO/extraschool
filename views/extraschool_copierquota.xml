<?xml version="1.0" ?>
<openerp>
	<data>        
        <record model="ir.ui.view" id="extraschool_copierquota_form">
            <field name="name">extraschool.copierquota.form</field>
            <field name="model">extraschool.copierquota</field>    
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Copier quota">
            <group col="4">
                    <field name="schoolimplantationid"/>     
                    <newline/>       
                    <field name="nbperiods"/>
                    <newline/>
                    <field name="nbchilds"/>
                    <newline/>
                    <field name="nbcopiesdone"/>
                    <newline/>
                    <field name="totalquota"/>
                    <newline/>
                    <field name="remainingcopies"/>
                    <newline/>
                    <field name="quotaadjustments">
                    <tree string="Quota adjustments" version="7.0">
                        <field name="quotaadjustment"/>     
                        <field name="reason"/>
                    </tree>
                    </field>  
            </group>          
            </form>
            </field> 
        </record>    
        <record model="ir.actions.act_window" id="action_extraschool_copierquota">
			<field name="name">Copier quota</field>
			<field name="res_model">extraschool.copierquota</field>
			<field name="view_type">form</field>            
		</record>    
	</data>
</openerp>
