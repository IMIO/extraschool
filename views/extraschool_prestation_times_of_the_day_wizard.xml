<?xml version="1.0" ?>
<openerp>
	<data> 
        <record model="ir.ui.view" id="extraschool_prestation_times_of_the_day_wizard_form">
            <field name="name">extraschool.prestation.times.of.the.day.wizard.form</field>
            <field name="model">extraschool.prestation_times_of_the_day_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Presta of the day wizard">
                    <group colspan="4" col="3">
                        <button name="reset" group="admin" string="Reset" icon="gtk-apply" type="object"/>
                        <button name="check" group="admin" string="Check" icon="gtk-apply" type="object"/>    
                        <button name="last_check_entry_exit"  groups="base.group_erp_manager" string="Check ES" icon="gtk-apply" type="object" />
