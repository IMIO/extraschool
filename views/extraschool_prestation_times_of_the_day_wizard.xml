                    </group>
                    <group col="4" groups="base.group_erp_manager">
                    	<field name="query_sql"/>
                        <button name="execute_sql" string="Execute sql" icon="gtk-apply" type="object"/>                    		                    	
                    </group>
                </form>
            </field>
        </record>        

        <act_window id="prestation_times_of_the_day_wizard_action"
            name="Presta of the day wizard"
            src_model="extraschool.prestation_times_of_the_day"
            res_model="extraschool.prestation_times_of_the_day_wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            />
                        
	</data>
