<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record model="ir.ui.view" id="extraschool_invoice_wizard_form">
            <field name="name">extraschool.invoice.wizard.form</field>
            <field name="model">extraschool.invoice_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <div class="alert alert-info" role="alert" attrs="{'invisible':[('isready', '!=', True)]}">
                    A biller is curently in creation. You will recieve an Email when the biller is completed.
                    In the meantime, here is a picture of a cat slightly annoyed:
                </div>
                <div attrs="{'invisible':[('isready', '!=', True)]}">
                    <img alt="grumpy cat" style="width:100px;" src="https://orig00.deviantart.net/affd/f/2013/229/b/0/image_by_xxspiritwolf2000xx-d6ikyan.jpg"/>
                </div>
                <form string="invoice Wizard" attrs="{'invisible':[('isready', '!=', False)]}">
                    <sheet>
                        <field name="warning_smartphone" nolabel="1" class="alert alert-info" role="alert" attrs="{'invisible':[('warning_visibility', '!=', True)]}"/>
                        <div class="alert alert-danger" role="alert" attrs="{'invisible':[('check_manual', '=', True)]}">
                            Il y a au moins un <b>encodage manuel</b> non vérifié pour cette période
                        </div>
                        <div class="alert alert-danger" role="alert" attrs="{'invisible':[('check_registration', '=', True)]}">
                            Il y a au moins une <b>fiche d'inscription</b> non validée pour cette période
                        </div>
                        <div class="alert alert-danger" role="alert" attrs="{'invisible':[('check_prestation', '=', True)]}">
                            Il y a au moins une <b>présence</b> non vérifiée pour cette période
                        </div>
                        <div class="alert alert-warning" role="alert" attrs="{'invisible':[('check_invoice', '=', True)]}">
                            Il n'y a pas de présences à facturer pour cette période
                        </div>
                        <field name="state" invisible="1" />
                        <field name="isready" invisible="1" />
                        <field name="check_manual" invisible="1" />
                        <field name="check_registration" invisible="1" />
                        <field name="check_prestation" invisible="1" />
                        <field name="check_invoice" invisible="1" />
                        <field name="warning_visibility" invisible="1" />
                        <group states="init">
                            <field name="schoolimplantationid" invisible="1"/>
                            <newline />
                            <field name="activitycategory" widget="many2many_tags" options="{'no_create':True}"/>
                            <newline />
                            <field name="generate_pdf"/>
                            <newline />
                            <field name="period_from" /><field name="period_to" />
                            <newline />
                            <field name="invoice_date" /><field name="invoice_term" />
                        </group>
                        <group states="compute_invoices">
                            <field name="name" invisible="1" colspan="4"/>
                            <field name="invoices" nolabel="1" readonly="1" filename="name" colspan="4"/>
                        </group>
                        <separator string="" colspan="4"/>
                        <group colspan="4" col="3">
                            <button name="action_compute_invoices" string="Compute invoices" icon="gtk-apply" type="object"
                                states="init"
                            />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_lbsc_invoice_wizard">
            <field name="name">invoice Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">extraschool.invoice_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
	</data>
</odoo>
