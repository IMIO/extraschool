<?xml version="1.0" ?>
<odoo>
	<data>

	    <record model="ir.ui.view" id="extraschool_plain_report_tree">
			<field name="name">extraschool.plain.report.tree</field>
			<field name="model">extraschool.plain_report</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Plain Report">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
				</tree>
			</field>
		</record>

        <record model="ir.ui.view" id="extraschool_plain_report_form">
            <field name="name">extraschool.plain.report.form</field>
            <field name="model">extraschool.plain_report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Plain Report">
                    <sheet>
                        <div class="alert alert-danger" attrs="{'invisible':[('dates_warning', '=', False)]}">
                             Vos dates ne sont pas valides.
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="document_date"/>
                            <field name="center"/>
                            <field name="activity_ids" widget="many2many_tags"/>
                            <field name="bank_account"/>
                            <field name="guardian"/>
                            <field name="dates_ok" invisible="1"/>
                            <field name="dates_warning" invisible="1"/>
                            <field name="title" widget='radio' options="{'horizontal': true}"/>
                            <field name="camps_radio" widget='radio' options="{'horizontal': true}"/>
                       </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_extraschool_plain_report">
            <field name="name">Plain Report</field>
            <field name="res_model">extraschool.plain_report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree, form</field>
            <field name="view_id" ref="extraschool_plain_report_tree"/>
        </record>
                <record model="ir.actions.act_window.view" id="action_extraschool_plain_report_form">
			<field name="name">Plain Report</field>
            <field eval="2" name="sequence"/>
			<field name="res_model">extraschool.plain_report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="extraschool_plain_report_form" />
            <field name="act_window_id" ref="action_extraschool_plain_report" />
            <field name="target">inline</field>
		</record>

        <record model="ir.actions.act_window.view" id="action_extraschool_plain_report_tree">
			<field name="name">Plain Report</field>
            <field eval="1" name="sequence"/>
			<field name="res_model">extraschool.plain_report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="extraschool_plain_report_tree" />
            <field name="act_window_id" ref="action_extraschool_plain_report" />
        </record>
	</data>
</odoo>
