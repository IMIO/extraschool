<?xml version="1.0" ?>
<odoo>
	<data>

        <record model="ir.ui.view" id="extraschool_health_sheet_tree">
			<field name="name">Health Sheet</field>
			<field name="model">extraschool.health_sheet</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Health Sheet">
                    <field name="child_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="extraschool_health_sheet_form">
			<field name="name">Health Sheet</field>
			<field name="model">extraschool.health_sheet</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Health Sheet">
                    <sheet>
                        <group col="4">
					        <h2><field name="child_id"/></h2>
                        </group>
                    <notebook>
                        <page string="Informations médicales">
							<group col="2">
                                <separator string="Docteur" colspan="4"/>
                                    <field name="doctor_id" colspan="2"/>
                                    <newline/>
                                    <field name="blood_type" widget='radio' options="{'horizontal': true}"/>
                                    <newline/>
                                <separator string="Tétanos" colspan="4"/>
                                    <field name="tetanus"/>
                                    <newline/>
                                    <field name="first_date_tetanus" attrs="{'invisible':[('tetanus', '!=', True)]}"/>
                                    <field name="last_date_tetanus" attrs="{'invisible':[('tetanus', '!=', True)]}"/>
                                <separator string="Allergie" colspan="4"/>
                                    <field name="allergy"/>
                                    <field name="allergy_ids" attrs="{'invisible':[('allergy', '!=', True)], 'required':[('allergy', '=', True)]}" widget="many2many_tags"/>
                                <separator string="Handicap" colspan="4"/>
                                    <field name="handicap"/>
                                    <field name="type_handicap" attrs="{'invisible':[('handicap', '!=', True)], 'required':[('handicap', '=', True)]}"/>
                                <separator string="Régime alimentaire spécial" colspan="4"/>
                                    <field name="specific_regime"/>
                                    <field name="specific_regime_text" attrs="{'invisible':[('specific_regime', '!=', True)], 'required':[('specific_regime', '=', True)]}"/>
                            </group>
						</page>
                        <page string="Social / Physique">
                            <div>
                                <separator string="Autres contacts"/>
                                <newline/>
                                <field name="contact_ids">
                                    <tree editable="bottom" string="Other Contacts">
                                        <field name="contact_name" required="1"/>
                                        <field name="contact_relation" required="1"/>
                                        <field name="contact_tel"/>
                                    </tree>
                                </field>
                            </div>
                            <div>
                                <separator string="Interdiction à ces personnes"/>
                                <newline/>
                                <field name="interdiction_contact_ids">
                                    <tree editable="bottom" string="Contacts sans permission">
                                        <field name="contact_name" required="1"/>
                                        <field name="contact_relation" required="1"/>
                                        <field name="contact_tel"/>
                                    </tree>
                                </field>
                            </div>
                            <div>
                                <group>
                                <separator string="Activité non praticables" colspan="2"/>
                                <newline/>
                                    <field name="activity_no_available"/>
                                    <field name="activity_no_available_text" attrs="{'invisible':[('activity_no_available', '!=', True)], 'required':[('activity_no_available', '=', True)]}"/>
                                </group>
                            </div>
                            <div>
                                <group>
                                <separator string="Natation" colspan="2"/>
                                <newline/>
                                    <field name="swim" widget='radio' options="{'horizontal': true}"/>
                                    <field name="swim_level" widget='radio' options="{'horizontal': true}" attrs="{'invisible':[('swim', '=', 'non_renseigne')]}"/>
                                </group>
                            </div>
                        </page>

                        <page string="Maladies">
                            <div>
                                <group>
                                    <separator string="L'enfant souffre de :"/>
                                    <newline/>
                                    <field name="disease_ids" nolabel="1">
                                        <tree editable="bottom" string="Diseases">
                                            <field name="disease" required="1"/>
                                            <field name="disease_text" required="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </div>
                            <div>
                                <group>
                                <separator string="Intervention grave ou maladie" colspan="2"/>
                                    <field name="intervention"/>
                                    <field name="intervention_text" attrs="{'invisible':[('intervention', '!=', True)], 'required':[('intervention', '=', True)]}"/>
                                </group>
                                <group>
                                <separator string="Diabète" colspan="2"/>
                                    <field name="diabetique"/>
                                </group>
                            </div>
						</page>
                        <page string="Divers">
                            <group>
                                <separator string="Réseaux sociaux" colspan="2"/>
                                <newline/>
                                <field name="facebook" widget='radio' options="{'horizontal': true}"/>
                                <newline/>
                                <separator string="Photo"/>
                                <newline/>
                                <field name="photo" widget='radio' options="{'horizontal': true}"/>
                                <newline/>
                                <separator string="Arnica"/>
                                <newline/>
                                <field name="arnica" widget='radio' options="{'horizontal': true}"/>
                            </group>
                        </page>
						<page string="Comment">
							<field name="comment" />
						</page>
                 	</notebook>
                    </sheet>
				</form>
			</field>
		</record>

        <record model="ir.ui.view" id="extraschool_doctor_form">
			<field name="name">Doctor</field>
			<field name="model">extraschool.doctor</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Doctor">
                    <sheet>
                        <div>
                            <h2><field name="name" placeholder="Docteur .. "/></h2>
                        </div>
                        <group>
                            <group col='4'>
                                <label for="street" string="Address"/>
                                <div>
                                    <field name="street" placeholder="Rue..."/>
                                    <div>
                                        <field name="zipcode" class="oe_inline" placeholder="Code Postal"/>
                                        <field name="city" class="oe_inline" placeholder="Ville"/>
                                    </div>
                                    <field name="country_id" placeholder="Pays"/>
                                </div>
                            </group>
                            <group>
                                <field name="doctor_contact" />
                                <field name="doctor_gsm" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Comment">
                                <field name="comment" />
                            </page>
                        </notebook>
                    </sheet>
				</form>
			</field>
		</record>

    </data>
</odoo>
