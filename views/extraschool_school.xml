<?xml version="1.0" ?>
<openerp>
	<data>        
        <record model="ir.ui.view" id="extraschool_school_tree">
			<field name="name">extraschool.school.tree</field>
			<field name="model">extraschool.school</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="School">
                    <field name="name"/> 
				</tree>
			</field>
		</record>
        <record model="ir.ui.view" id="extraschool_school_form">
            <field name="name">extraschool.school.form</field>
            <field name="model">extraschool.school</field>    
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Schools"> 
	            <group col="4">       
	                <field name="name"/>
	                <field name="logo" widget="image" class="oe_avatar oe_left" />
	                <field name="street"/> 
	                <newline/>
	                <field name="zipcode"/>        
	                <newline/>
	                <field name="city"/>
	                <newline/>       
	                <field name="schoolimplantations">
			            <form string="School Implantation"> 
			            <group col="4">
			                <field name="name"/>
			                <newline/>
			                <field name="street"/> 
			                <newline/>
			                <field name="zipcode"/>        
			                <field name="city"/>			                		                
			            </group>
			            </form>            		
	                </field>
            	</group>        
            </form>
            </field> 
        </record>
	</data>
</openerp>