<?xml version="1.0" ?>
<openerp>
	<data> 
        <record model="ir.ui.view" id="extraschool_prestations_wizard_form">
            <field name="name">extraschool.prestations_wizard.form</field>
            <field name="model">extraschool.prestations_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Prestations Wizard" >
                    <group colspan="2">
                        <!--field name="placeid" on_change="onchange_placeid(placeid)"/ -->
                        <field name="placeid"/>
                        <newline/>                        
                        <field name="childid" default_focus="1"  on_change="onchange_childid(childid,prestation_date)"/>
                        <newline/>
                        <field name="prestation_date" on_change="onchange_prestation_date(prestation_date,childid)"/>
                        <separator string="Prestations"/>
                        <newline/>
                        <field name="prestations_id" nolabel="1" on_change="onchange_prestations(prestations_id,childid,prestation_date,placeid)" colspan="2">
                            <tree string="Prestations" version="7.0" editable="bottom">
                                <field name="activitycategoryid"/>
                                <field name="prestation_time" widget="float_time"/>
                                <field name="ES"/>
                                <field name="manualy_encoded"/>
                                <!-- field name="activityid"/-->
                                <field name="placeid"/>
                            </tree>
                        </field>
                        
                        <!--newline/>                        
                        <separator string="Ajouter une prestation"/>
                        <newline/>
                        <field name="activitycategory"  domain="[('placeids', '=', placeid)]"/>
                        <newline/>
                        <field name="prestation_time" widget="float_time"/>
                        <newline/>
                        <field name="es"/>  
                        <newline/>
                        <button name="action_save_prestation" string="Save" icon="gtk-apply" type="object"/ -->
                    </group>
                    <group colspan="2">
                        
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_lbsc_prestations_wizard">
            <field name="name">Prestations Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">extraschool.prestations_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
	</data>
</openerp>
