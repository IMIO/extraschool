<?xml version="1.0" ?>
<openerp>
	<data>
		<template id="report_child">
			<xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_child.css"/>
            </xpath>
				<t t-foreach="docs" t-as="child">
			        <div class="page" style="width: 100%;display: block;">
			            <div class="row">
				            <div class="col-xs-6 col-xs-offset-3">
				            	<t t-if="child.tagid">
				            		<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', child.tagid, 200, 200)"/>
                                </t>
				            </div>
				        </div>
			            <div class="row" style="font-size:30px;">
				            <h2 style="font-size: 60px;"><span t-field="child.name" /></h2>
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Ecole : </span><span t-field="child.schoolimplantation.name" />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Class : </span><span t-field="child.classid.name" />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Responsable : </span><span t-field="child.parentid.name" />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;"/><span t-field="child.parentid.street"  /><br/>
				            <span class="mylabel" style="font-weight: bold;width: 7cm;"/><span t-field="child.parentid.zipcode"  /> <span t-field="child.parentid.city"  />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Tél. maison : </span><span t-field="child.parentid.housephone" />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Tél du travail : </span><span t-field="child.parentid.workphone" />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Gsm : </span><span t-field="child.parentid.gsm" />
			            </div>
			            <div class="row" style="font-size:30px;">
				            <span class="mylabel" style="font-weight: bold;width: 7cm;">Email : </span><span t-field="child.parentid.email" />
			            </div>

		    	    </div>
		    	</t>
		</template>

        <template id="report_child_info">
			<xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_child_info.css"/>
            </xpath>
				<t t-foreach="docs" t-as="child">
			        <div class="page" style="width: 100%;display: block;">
                        <div>
                            <h2 style="font-size: 21px; font-weight: bold;">Fiche enfant de <span t-field="child.name" /></h2>
			            </div><br/>
			            <div style="font-size:16px; line-height:2.5;">
				            Fiche généré le <span t-field="child.create_date"/>.<br/>
				            <span class="mylabel" style="font-weight: bold; text-decoration: underline;">Informations générales : </span><br/>
				            Nom : <span style="float:right;" t-field="child.lastname" /><br/>
				            Prénom : <span style="float:right;" t-field="child.firstname" /><br/>
                            Date de naissance : <span style="float:right;" t-field="child.birthdate" /><br/>
                            Adresse : <span style="float:right;" t-field="child.parentid.street" /><br/> <span style="float:right; padding-left: 20px;" t-field="child.parentid.zipcode"  /> <span style="float:right;" t-field="child.parentid.city"  /><br/><br/>
                            <t t-if="child.parentid.housephone">Téléphone en cas d'urgence n°1 : <span style="float:right;" t-field="child.parentid.housephone" /><br/></t>
                            <t t-if="not child.parentid.housephone">Téléphone en cas d'urgence n°1 : <span style="float:right;">Non renseigné</span><br/></t>
                            <t t-if="child.parentid.workphone">Téléphone en cas d'urgence n°2 : <span style="float:right;" t-field="child.parentid.workphone" /><br/></t>
                            <t t-if="not child.parentid.workphone">Téléphone en cas d'urgence n°2 : <span style="float:right;">Non renseigné</span><br/></t>
                            <t t-if="child.parentid.gsm">Téléphone en cas d'urgence n°3 : <span style="float:right;" t-field="child.parentid.gsm" /><br/></t>
                            <t t-if="not child.parentid.gsm">Téléphone en cas d'urgence n°3 : <span style="float:right;">Non renseigné</span><br/></t>
			            </div>
		    	    </div>
		    	</t>
		</template>

		<report
		    id="extraschool_child2"
		    model="extraschool.child"
		    string="Fiche Enfant"
		    report_type="qweb-pdf"
		    name="extraschool.report_child_info"
		    attachment_use="False"
		/>

        <report
		    id="extraschool_child"
		    model="extraschool.child"
		    string="Child book"
		    report_type="qweb-pdf"
		    name="extraschool.report_child"
		    attachment_use="False"
		/>
	</data>
</openerp>

