<?xml version="1.0" ?>
<odoo>
	<data>
		<template id="report_reminder_text">
		    <style type="text/css">
		        .reminder_body{
		    		width: 100%;
					font-size: 14px;
                    text-align: justify;
		    	}

			</style>

        	<div class="reminder_body">
				<p><t t-raw="html_text"/></p>
       		</div>
		</template>


		<template id="report_reminder_img">
		    <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_reminder_sign.css"/>
            </xpath>
			<div id="doc_resp_sign">
				<img class="sign_img" t-attf-src="data:image/jpeg;base64,{{reminder.reminders_journal_id.activity_category_ids[0].po_rappel_sign}}"/>
			</div>
		</template>

		<template id="report_reminder_sign">
		    <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_sign_reminder.css"/>
            </xpath>
			<div id="doc_resp_sign">
				<div>
					<span t-esc="resp_fct_rappel" />
					<span t-esc="resp_name_rappel" />
				</div>
			</div>
		</template>

	</data>
</odoo>

