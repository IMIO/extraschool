        <template id="report_child_registration_summary">

            <style type="text/css">
                .page{
                width: 100%;
                display: block;
                }

                .page table {
                width: 100%;
                font-size:11px;
                border-width: 1px;
                border-collapse: collapse;
                margin-top: 1cm;
                }
                .page table th {
                border-width: 1px;
                padding: 8px;
                border-style: solid;
                background-color: #dedede;
                }
                .page table td {
                border-width: 1px;
                padding: 8px;
                border-style: solid;
                }

            </style>
            <t t-foreach="docs" t-as="child_registration">

                <div class="page" style="width: 100%;display: block;">
                    <h2>Inscription</h2>
                    <div>
                        <span>Implantation :</span>
                        <span t-field="child_registration.school_implantation_id.name"/>
                    </div>
                    <div>
                        <span>semaine :</span>
                        <span t-field="child_registration.week"/>
                        du :
                        <span t-field="child_registration.date_from"/>
                        au :
                        <span t-field="child_registration.date_to"/>
                    </div>

                    <table
                        style="width: 100%;font-size:11px;border-width: 1px;border-collapse: collapse;margin-top: 1cm;">
                        <tr>
                            <th style="border-width: 1px;padding: 8px;border-style: solid;background-color: #dedede;">
                                Description
                            </th>
                            <th style="border-width: 1px;padding: 8px;border-style: solid;background-color: #dedede;">
                                Lundi
                            </th>
                            <th style="border-width: 1px;padding: 8px;border-style: solid;background-color: #dedede;">
                                Mardi
                            </th>
                            <th style="border-width: 1px;padding: 8px;border-style: solid;background-color: #dedede;">
                                Mercredi
                            </th>
                            <th style="border-width: 1px;padding: 8px;border-style: solid;background-color: #dedede;">
                                Jeudi
                            </th>
                            <th style="border-width: 1px;padding: 8px;border-style: solid;background-color: #dedede;">
                                Vendredi
                            </th>
                        </tr>
                        <t t-set="summary" t-value="child_registration.get_summary()"/>
                        <t t-foreach="summary" t-as="summary_item">
                            <tr>
                                <td style="border-width: 1px;padding: 8px;border-style: solid;">
                                    <span t-raw="summary_item"/>
                                </td>
                                <td style="border-width: 1px;padding: 8px;border-style: solid;">
                                    <span t-raw="summary[summary_item][0]"/>
                                </td>
                                <td style="border-width: 1px;padding: 8px;border-style: solid;">
                                    <span t-raw="summary[summary_item][1]"/>
                                </td>
                                <td style="border-width: 1px;padding: 8px;border-style: solid;">
                                    <span t-raw="summary[summary_item][2]"/>
                                </td>
                                <td style="border-width: 1px;padding: 8px;border-style: solid;">
