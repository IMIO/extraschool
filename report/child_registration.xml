<?xml version="1.0" ?>
<odoo>
    <data>
        <template id="report_child_registration">
            <style type="text/css">
                .page{
                width: 100%;
                display: block;
                }

                .page table {
                width: 100%;
                font-size:11px;
                border-width: 1px;
                border-collapse: collapse;
                margin-top: 1cm;
                }
                .page table th {
                text-align: center;
                border-width: 1px;
                padding: 8px;
                border-style: solid;
                background-color: #dedede;
                }
                .page table td {
                border-width: 1px;
                padding: 8px;
                border-style: solid;
                }
                img {
                display: block;
                margin-left: auto;
                margin-right: auto;
                width: 15px;
                height: 15px;
                align: middle;
                }

            </style>
            <t t-foreach="docs" t-as="child_registration">

                <div class="page" style="width: 100%;display: block;">
                    <h2>Inscription Maternelle</h2>
                    <div>
                        <span>Implantation :</span>
                        <span t-field="child_registration.school_implantation_id.name"/>
                    </div>
                    <div>
                        <span>Semaine :</span>
                        <span t-field="child_registration.week"/>
                        du :
                        <span t-field="child_registration.date_from"/>
                        au :
                        <span t-field="child_registration.date_to"/>
                    </div>
                    <t t-if="child_registration.activity_id">
                        <div>
                            <span>Activité :</span>
                            <span t-field="child_registration.activity_id"/>
                        </div>
                    </t>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Lundi</th>
                                <th scope="col">Mardi</th>
                                <th scope="col">Mercredi</th>
                                <th scope="col">Jeudi</th>
                                <th scope="col">Vendredi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="child_registration.child_registration_line_ids.filtered(lambda r: r.child_id.levelid.leveltype in ['M','A'])"
                               t-as="child">
                                <t t-if="child.child_must_be_printed()">
                                    <tr>
                                        <td>
                                            <h5>
                                                <span t-field="child.child_id.name"/>
                                                <b>
                                                    <span t-esc="child.child_id.get_age()"/>
                                                    ans
                                                </b>
                                            </h5>
                                            <i>
                                                <b>
                                                    Parent:
                                                </b>
                                                <span t-field="child.child_id.parentid.name"/>
                                            </i>
                                            <t t-if="child.child_id.parentid.housephone">
                                                <br></br>
                                                <b>Tel Maison:</b>
                                                <span t-field="child.child_id.parentid.housephone"/>
                                            </t>
                                            <t t-if="child.child_id.parentid.workphone">
                                                <br></br>
                                                <b>Tel Travail:</b>
                                                <span t-field="child.child_id.parentid.workphone"/>
                                            </t>
                                            <t t-if="child.child_id.parentid.gsm">
                                                <br></br>
                                                <b>GSM:</b>
                                                <span t-field="child.child_id.parentid.gsm"/>
                                            </t>
                                            <t t-if="child.child_id.to_go_alone">
                                                <br></br>
                                                <b>Peut rentrer seul:</b>
                                                <span t-field="child.child_id.to_go_alone"/>
                                            </t>
                                            <t t-if="child.child_id.comment">
                                                <br></br>
                                                <i>
                                                    <b>A savoir:</b>
                                                    <span t-field="child.child_id.comment"/>
                                                    <br></br>
                                                </i>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="child.monday_activity_id.name"/>
                                            <span t-if="child.monday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.tuesday_activity_id.name"/>
                                            <span t-if="child.tuesday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.wednesday_activity_id.name"/>
                                            <span t-if="child.wednesday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.thursday_activity_id.name"/>
                                            <span t-if="child.thursday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.friday_activity_id.name"/>
                                            <span t-if="child.friday">X</span>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div class="page" style="width: 100%;display: block;">
                    <h2>Inscription Primaire</h2>
                    <div>
                        <span>Implantation :</span>
                        <span t-field="child_registration.school_implantation_id.name"/>
                    </div>
                    <div>
                        <span>semaine :</span>
                        <span t-field="child_registration.week"/>
                        du :
                        <span t-field="child_registration.date_from"/>
                        au :
                        <span t-field="child_registration.date_to"/>
                    </div>
                    <t t-if="child_registration.activity_id">
                        <div>
                            <span>Activité :</span>
                            <span t-field="child_registration.activity_id"/>
                        </div>
                    </t>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Lundi</th>
                                <th scope="col">Mardi</th>
                                <th scope="col">Mercredi</th>
                                <th scope="col">Jeudi</th>
                                <th scope="col">Vendredi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="child_registration.child_registration_line_ids.filtered(lambda r: r.child_id.levelid.leveltype in ['P','A'])"
                               t-as="child">
                                <t t-if="child.child_must_be_printed()">
                                    <tr>
                                        <td>
                                            <h5>
                                                <span t-field="child.child_id.name"/>
                                                <b>
                                                    <span t-esc="child.child_id.get_age()"/>
                                                    ans
                                                </b>
                                            </h5>
                                            <i>
                                                <b>
                                                    Parent:
                                                </b>
                                                <span t-field="child.child_id.parentid.name"/>
                                            </i>
                                            <t t-if="child.child_id.parentid.housephone">
                                                <br></br>
                                                <b>Tel Maison:</b>
                                                <span t-field="child.child_id.parentid.housephone"/>
                                            </t>
                                            <t t-if="child.child_id.parentid.workphone">
                                                <br></br>
                                                <b>Tel Travail:</b>
                                                <span t-field="child.child_id.parentid.workphone"/>
                                            </t>
                                            <t t-if="child.child_id.parentid.gsm">
                                                <br></br>
                                                <b>GSM:</b>
                                                <span t-field="child.child_id.parentid.gsm"/>
                                            </t>
                                            <t t-if="child.child_id.to_go_alone">
                                                <br></br>
                                                <b>Peut rentrer seul:</b>
                                                <span t-field="child.child_id.to_go_alone"/>
                                            </t>
                                            <t t-if="child.child_id.comment">
                                                <br></br>
                                                <i>
                                                    <b>A savoir:</b>
                                                    <span t-field="child.child_id.comment"/>
                                                    <br></br>
                                                </i>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="child.monday_activity_id.name"/>
                                            <span t-if="child.monday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.tuesday_activity_id.name"/>
                                            <span t-if="child.tuesday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.wednesday_activity_id.name"/>
                                            <span t-if="child.wednesday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.thursday_activity_id.name"/>
                                            <span t-if="child.thursday">X</span>
                                        </td>
                                        <td>
                                            <span t-field="child.friday_activity_id.name"/>
                                            <span t-if="child.friday">X</span>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>


        <report
            id="extraschool_child_registration_report"
            model="extraschool.child_registration"
            string="Inscriptions"
            report_type="qweb-pdf"
            name="extraschool.report_child_registration"
            attachment_use="False"
        />


