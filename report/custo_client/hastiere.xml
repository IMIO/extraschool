<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <template id="report_sign_img_plus_petit">
            <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_sign_img_plus_petit.css"/>
            </xpath>
            <div id="doc_resp_sign">
                <img class="sign_img" t-attf-src="data:image/jpeg;base64,{{resp_sign_img}}"/>
            </div>
        </template>

        <template id="report_std_header_adresse">
		    <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_std_header_adresse.css"/>
            </xpath>
		    <div id="aes_header">
		    	<div class="row">
                    <div>
                        <div id="b_logo">
                            <img class="logo" t-attf-src="data:image/jpeg;base64,{{logo}}"/>
                        </div>
                        <div id="b_slogan">
                            <span class="slogan"><t t-esc="slogan" /></span><br/>
                            <span class="slogan"><t t-esc="street" /></span><br/>
                            <span class="slogan"><t t-esc="zipcode" /></span> <span class="slogan"><t t-esc="city" /></span>
                        </div>
                    </div>
					<div id="b_date">
						<span class="doc_date"><t t-esc="doc_date" /></span>
					</div>
		    	</div>
			</div>
		</template>

        <template id="report_adresse_no_style_comment_hastiere">
		    <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/extraschool/static/src/css/report_adresse_no_style_comment_ittre.css"/>
            </xpath>
	    	<div class="aes_adresse">
				<div class="aes_adresse_block customers">
					<span t-field="addresse.name" />
					<span t-field="addresse.street" />
					<span><t t-esc="addresse.zipcode" /> <t t-esc="addresse.city" /></span>
				</div>
			</div>
		</template>

    </data>

</odoo>
