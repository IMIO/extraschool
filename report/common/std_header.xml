<?xml version="1.0" ?>
<openerp>
	<data> 
		<template id="report_std_header">
		    <style type="text/css">
		        #aes_header{
		    		width: 100%;
		    		display: block;
		    		clear: both;
		    	}
		    	#aes_header>div.row{
		    		width: 100%;
		    		margin-left: 0mm;
		    	}
		    	.doc_date:after{
		    		display:block;
		    		content:"";
		    		clear:both;
		    	}
		    	
				.logo {
					width: 25mm;
					display: inline-block;
					float: left;        				
				}
									
				.slogan {
		    	  	float: left;
		    		width: 10cm;
				}
		    	
				.doc_date {
		    	  	float: right;		    		
		    		text-align: right;
		    		width: 9cm;
				}
		    </style>			
	    	
		    <div id="aes_header">
		    	<div class="row">
					<span class="doc_date"><t t-esc="doc_date" /></span>	
					<img class="logo" t-attf-src="data:image/jpeg;base64,{{logo}}"/>					    				    		
		    	</div>
		    	<div class="row">
			    	<span class="slogan"><t t-esc="slogan" /></span>
				</div>
			</div>
		</template>

		<template id="report_std_header_no_date" inherit_id="extraschool.report_std_header" primary="True">

			<xpath expr="//span[@class='doc_date']" position="replace">
			</xpath>		
		</template>


	</data>
</openerp>	
	
	