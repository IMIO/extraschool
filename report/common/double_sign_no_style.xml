<?xml version="1.0" ?>
<openerp>
	<data> 		
		<template id="report_double_sign_no_style">
			<style>
				#doc_resp_sign{
					display: block;
					width: 100%;
				}
				
				#doc_resp_sign>div{				
					float: right;
					width : 33%;							
				}

				#doc_resp_sign>div>div{
					display: block;
    				margin-top: 8mm;						
				}								

				.sign_elem {
					display:block;
					width: 100%;
					text-align: center;
					font-size: 5mm;
				}
				
				.sign_img{
					display: block;
					margin-left: auto;
					margin-right: auto;
					vertical-align: bottom;								
				}
								
				.stamp{
					display: block;
    				margin: auto;
				}	
				
				#stamp {
					height: 4.5cm;
					background-repeat: no-repeat;
					background-position: center;	
										
				}
												
			</style>
			<div id="doc_resp_sign">
				<div id="sign_resp1">
					<div>
						<span class="sign_elem" t-esc="resp_fct" />										
						<span class="sign_elem" t-esc="resp_name" />
						<t t-if="resp_sign">					
							<img class="sign_img" t-attf-src="data:image/jpeg;base64,{{resp_sign}}"/>
						</t>																		
					</div>					
				</div>
				<t t-if="po_stamp">	
					<div id="stamp"  t-attf-style='background-image:url("data:image/jpeg;base64,{{po_stamp}}");'>
						<div>					
							<span class="sign_elem">Par le Coll√®ge :</span>									
						</div>						
					</div>
				</t>				
				<div id="sign_resp2">
					<div>
						<span class="sign_elem" t-esc="resp2_fct" />										
						<span class="sign_elem" t-esc="resp2_name" />
						<t t-if="resp2_sign">						
							<img class="sign_img" t-attf-src="data:image/jpeg;base64,{{resp2_sign}}"/>
						</t>																		
					</div>
				</div>
			</div>
		</template>

	</data>
</openerp>	
	
	