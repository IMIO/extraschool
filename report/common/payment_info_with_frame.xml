<?xml version="1.0" ?>
<odoo>
	<data> 		
		<template id="report_payment_info_with_frame" inherit_id="extraschool.report_payment_info_no_style" primary="True">

			<xpath expr="//div[@id='payment_info']" position="before">
				<style>			
					#payment_info{
						page-break-inside: avoid;
						display: block;
						width: 100%;
						padding: 8px;
						border-width: 1px;
						border-style: solid;
						clear: both;			
					}
				</style>
			</xpath>		
		</template>

	</data>
</odoo>
	
