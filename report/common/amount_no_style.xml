<?xml version="1.0" ?>
<openerp>
	<data> 		
		<template id="report_amount_no_style">
			<style>
				#total_row{
					float: left;
					width: 100%;
				}
				
				#total{
					border-width: 1px;
					border-style: solid;
					width: 40%;
				    float: right;
				    margin: 5mm 0mm 5mm 0mm;
				}
				
				#total:after {
					content: "";
					display: block;
					clear: both;				
				}
				
				#total>div{
					display: block;
					padding: 0px 8px 0px 8px;
					width: 100%;
					float: right;			
				
				}
								
				#total>div>span.amount {
					float : right;
					width: 50%;		
					text-align: right;		
				}
				
				#total>div>span.zz_label {
					float : left;
					width: 50%;					
				}
				
				#total>div.to_pay {
					font-weight: bold;
				}

			</style>
			<div id="total_row">
				<div id="total">
					<div class="amount">
					  <span class="zz_label">Total</span><span class="amount"><t t-esc="'%.2f' %  (total)" /> €</span>															
					</div>
					<div class="amount">
					  <span class="zz_label">Reçu</span><span class="amount"><t t-esc="'%.2f' %  (received)" /> €</span>															
					</div>
					<div class="amount to_pay">
					  <span class="zz_label">A payer avant le <t t-esc="payment_term" /></span><span class="amount"><t t-esc="'%.2f' %  (balance)" /> €</span>															
					</div>
										
				</div>								
			</div>
		</template>

	</data>
</openerp>	
	
	