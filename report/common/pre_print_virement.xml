<?xml version="1.0" ?>
<odoo>
	<data> 		
		<template id="report_pre_print_virement">
			<style>
				#pre_print_virement{
					display: block;
					min-height: 80mm;
					width: 100%;
					margin: 0px;
					border: 0mm;
					font-size: 6mm;
				}
				#pre_print_virement > div{
					clear: both;
					display: block;
					min-height: 10mm;
				}	
							
				.first_row{
					margin-top: 0mm;
					padding-top: 2mm;
				}

				.virment_amount{
					float:right;
					width: 70mm;
					text-align: right;
					margin-right: 2mm;
				}

				.int_amount{
					float:left;
					text-align: right;
					width: 5.7cm;
				}				
								
				.decimal_amount{
					float:left;
					padding-left: 5mm;
					text-align: left;
				}
				
				.virement_row{
					margin-left: 22mm;
				}
												
				.adresse > span{
					clear: both;
					display: block;
				  	margin-top: -3mm;
				}
				
				.adresse{
					margin-top: 3mm;
				  	margin-bottom: 0mm;
				  	font-size: 5mm;
				}
				
				#execution_date{
					display: inline;
					float: left;
					width: 5cm;
				}
				
				#execution_date li{
					display: inline;
					margin-right: 3mm;
				}
				
				.account_row{
					padding-top: 26mm;
				}
				
				.construct_row{
					margin-top: -1mm;
				}
				

			</style>
			<div id="pre_print_virement">
				<div class="first_row">
						<ul id="execution_date">
							<li><t t-esc="execution_date_day" /></li>
							<li><t t-esc="execution_date_month" /></li>
							<li><t t-esc="execution_date_year" /></li>
						</ul>
					<div class="virment_amount">						
						<span class="int_amount"><t t-esc="amount_int" /></span>
						<span class="decimal_amount"><t t-esc="amount_dec" /></span>										
					</div>
				</div>
				<div class="virement_row account_row">
					<span class="account"><t t-esc="bankaccount" /></span>					
				</div>
				<div class="virement_row">
					<span class="bic"><t t-esc="bank_bic" /></span>					
				</div>
				<div class="virement_row adresse">
					<span class="street"><t t-esc="bank_address" /></span>
					<span class="zip"><t t-esc="bank_zip" /></span>
					<span class="city"><t t-esc="bank_city" /></span>
				</div>
				<div class="virement_row construct_row">
					<span class="comstruct"><t t-esc="com_struct" /></span>																
				</div>
			</div>
		</template>

	</data>
</odoo>
	
